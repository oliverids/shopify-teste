<h1>{{ product.title }}</h1>
<h2>{{ product.price | money }}</h2>
<p>{{ product.content }}</p>

{% if product.has_only_default_variant != true %}
{% endif %}

{% form 'product'
, product %}

<select name="id" id="">
    {% for variant in product.variants %}
    <option value="{{ variant.id }}">{{ variant.title }}</option>
    {% endfor %}
</select>

<button type="submit">Add to Cart</button>

{% endform %}